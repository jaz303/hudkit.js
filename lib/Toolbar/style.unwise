.hk-toolbar {
    
}

.hk-toolbar-items {

}

.hk-toolbar-items.hk-toolbar-items-left {
    float: left;
}

.hk-toolbar-items.hk-toolbar-items-right {
    float: right;
}

.hk-toolbar-items > * {
    margin-right: 2px;
    height: $HK_TOOLBAR_HEIGHT;

    box-sizing: border-box;
    -moz-box-sizing: border-box;
}

.hk-toolbar-button {
    border: 1px solid $HK_TOOLBAR_ITEM_BORDER_COLOR;
    padding: $HK_TOOLBAR_V_PADDING 3px;
}
